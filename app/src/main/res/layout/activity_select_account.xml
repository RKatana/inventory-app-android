<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightPrimaryColor"
    tools:context=".ui.SelectAccountActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/image1" />


    <TextView
        android:id="@+id/textSelectAccountTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:text="Select Account"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/btnStoreAttendant"
        android:layout_width="280dp"
        android:layout_height="90dp"
        android:layout_below="@id/textSelectAccountTextView"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@drawable/ic_action_name"
        android:text="STORE ATTENDANT" />

    <Button
        android:id="@+id/btnStoreOwner"
        android:layout_width="280dp"
        android:layout_height="90dp"
        android:layout_below="@id/btnStoreAttendant"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@drawable/ic_action_name2"
        android:text="STORE OWNER" />


</RelativeLayout>