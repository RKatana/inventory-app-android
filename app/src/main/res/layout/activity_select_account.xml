<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightPrimaryColor"
    tools:context=".SelectAccountActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/image1" />


    <TextView
        android:id="@+id/textSelectAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:text="Select Account"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/btnStoreAttendant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="32dp"
        android:background="@color/purple_200"
        android:text="STORE ATTENDANT"
        android:textColor="#311B92"
        android:textSize="20sp"
        app:cornerRadius="5dp"
        app:layout_constraintBottom_toTopOf="@+id/btnStoreOwner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnStoreOwner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnStoreAttendant"
        android:layout_centerInParent="true"
        android:layout_marginBottom="100dp"
        android:background="@color/accentColor"
        android:text="STORE OWNER"
        android:textColor="#4A148C"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />
        android:layout_width="280dp"
        android:layout_height="90dp"
        android:layout_below="@id/textSelectAccount"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@drawable/ic_action_name"
        android:text="STORE ATTENDANT" />

    <Button
        android:id="@+id/btnStoreOwner"
        android:layout_width="280dp"
        android:layout_height="90dp"
        android:layout_below="@id/btnStoreAttendant"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@drawable/ic_action_name2"
        android:text="STORE OWNER" />

</RelativeLayout>